@model DotaTrial.Models.Hero

@{
    ViewBag.Title = "Delete";
    ViewBag.BreadCrumbs = "<a href=/Hero>HERO</a> &raquo; Delete Hero";
    ViewBag.CurrentPage = "Hero";
}

<!-- Vertical Layout | With Floating Label -->
<div class="row clearfix">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 col-lg-offset-3 col-md-offset-3">
        <div class="card">
            <div class="header">
                <h2>
                    Delete @Model.HeroFullname's Details
                </h2>
            </div>
            <div class="body">
                <h3 class="col-red">Are you sure you want to delete this?</h3>
                <center>
                    <img src="~/Images/@(Model.HeroImages==null ? "profile-account.png":Model.HeroImages)" style="width: 300px;max-height:100%" />
                </center>
                <br />
                <br />
                <br />
                <label class="form-label">Fullname:</label><span>@Html.DisplayFor(model => model.HeroFullname)</span>
                <br />
                <label class="form-label">Nickname:</label><span>@Html.DisplayFor(model => model.HeroNickname)</span>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group text-right" style="margin-bottom:0;">
                        <button type="submit" class="btn btn-danger m-t-15 waves-effect">Delete</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Vertical Layout | With Floating Label -->
